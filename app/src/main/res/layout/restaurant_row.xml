<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.test.currentTest.model.Restaurant"/>
        <variable
            name="restaurant"
            type="com.test.currentTest.model.Restaurant" />
    </data>
    <LinearLayout
        android:id="@+id/cvRestaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/pd_12">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/pd_12"
            android:layout_marginBottom="@dimen/pd_8">
            <ImageView
                android:id="@+id/imgRestaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pd_4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="@dimen/name"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:text="@{restaurant.name}"
                />
            <include
                android:id="@+id/llRating"
                android:visibility="gone"
                layout="@layout/rating" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/description"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="@{restaurant.description}"
            android:layout_marginBottom="@dimen/pd_4"
            />
        <TextView
            android:id="@+id/tvDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/delivery_color"
            android:textSize="@dimen/delivery"
            android:ellipsize="end"
            android:text="@{@string/static_price(10)}"
            android:layout_marginBottom="@dimen/pd_4"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_local_offer_24"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/pd_4"
                android:rotationY="180"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/offer_color"
                android:textSize="@dimen/offer"
                android:text="@{restaurant.offer}"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</layout>